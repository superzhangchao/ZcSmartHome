/* miniprogram/pages/home_center/common_panel/index.js.wxss */

.common-panel-backgroud {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
	height: 600px;
	background-color: #27c3d9;
}

.common-panel-header {
  z-index: 1;
  width: 100%;
  height: 400px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.common-panel-header-block {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.common-panel-header-chazuo-state {
  margin-top: 25rpx;
	width: 160px;
  height: 25px;
  text-align: center;
	font-family: HelveticaNeue;
	font-size: 12px;
  line-height: 24px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
	color: #3caa5d;
}

.common-panel-header-chazuo {
	width: 140px;
  height: 140px;
  font-family: DINCondensed-Bold;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
	font-size: 74px;
	color: #fff;
}

.common-panel-bottom {
  overflow: hidden;
  margin-bottom: 0;
  width: 100%;
  position: fixed;
  bottom: 20px;
  display: flex;
  justify-content:center;

}
.common-panel-bottom-view{
  display: flex;
  flex-direction: column;
  width: 150rpx;
  align-items: center;
  margin-left: 45rpx;
  margin-right: 45rpx;
  color: rgb(255, 255, 255);
  font-size:20px;
}
.common-panel-bottom_im{
  display: flex;
  width: 80rpx;
  height: 80rpx;
}
.common-panel-bottom_bt{
  margin-top: 15rpx;
  width: 80rpx;
  height: 80rpx;
  font-size: 10px;
  text-align: center;

}
